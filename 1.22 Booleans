#include <stdio.h>
#include <stdbool.h>

int main() {
    // Declare boolean variables
    bool isTrue = true;
    bool isFalse = false;

    // Print the values of the boolean variables
    printf("isTrue: %d\n", isTrue);
    printf("isFalse: %d\n", isFalse);

    // Use boolean variables in conditional statements
    if (isTrue) {
        printf("isTrue is true\n");
    } else {
        printf("isTrue is false\n");
    }

    if (isFalse) {
        printf("isFalse is true\n");
    } else {
        printf("isFalse is false\n");
    }

    return 0;
}
